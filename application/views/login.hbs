<div class="spacer"></div>
<div class="page">
  {{>navbar}}
  <div class="login-form-container">
    <header>Login</header>
    <form class="login-form" action="/login" method="POST" onsubmit="return validateForm()">
      <input type="text" name="username" placeholder="Username" required pattern=".{5,}" title="Username must be at least 5 characters long">
      <input type="password" name="password" placeholder="Password" required pattern=".{8,}" title="Password must be at least 8 characters long">
      <label>
        <input type="checkbox" name="remember_me"> Remember me
      </label>
      <input type="submit" value="Login">
      <a href="/register">Register</a>
      <a href="/forgot-password">Forgot Password</a>
      <a href="/forgot-username">Forgot Username</a>
      <a class="unfinished_button">Admin Login</a>
    </form>
  </div>
  {{>footer}}
</div>
<div class="spacer"></div>

<script>
  function validateForm() {
    // Example of additional validation
    var username = document.forms["login-form"]["username"].value;
    var password = document.forms["login-form"]["password"].value;
    if (username == "" || password == "") {
      alert("Username and Password must be filled out");
      return false;
    }
    // Add more complex validation if needed
    return true;
  }
</script>
