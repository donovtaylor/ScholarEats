<div class="leftSpacer"></div>
{{>header}}
<div class="container">
  <article>
    <header>{{title}}</header>
    <img src="{{image}}" alt="{{title}}" class="recipe-image">
    
    <div class="recipe-info">
        <p><strong>Prep Time:</strong> {{prepTime}}</p>
        <p><strong>Cook Time:</strong> {{cookTime}}</p>
        <p><strong>Servings:</strong> {{servings}}</p>
    </div>

    <div class="ingredients">
        <h2>Ingredients</h2>
        <ul>
            {{#each ingredients}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="instructions">
        <h2>Instructions</h2>
        <ol>
            {{#each instructions}}
                <li>{{this}}</li>
            {{/each}}
        </ol>
    </div>
  </article>
</div>
{{>footer}}
<div class="rightSpacer"></div>
