<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Ingredient</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-orange {
            background-color: #ff8c00;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Add Ingredient</h1>
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}
        <form id="addIngredientForm" action="/admin-tools/inventory-management/add" method="POST">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>
            <div class="form-group">
                <label for="expiration_date">Expiration Date</label>
                <input type="date" class="form-control" id="expiration_date" name="expiration_date" required>
            </div>
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control" id="quantity" name="quantity" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Ingredient</button>
        </form>
        <form id="removeIngredientForm" action="/admin-tools/inventory-management/remove" method="POST" class="mt-3">
            <input type="hidden" id="removeName" name="Name">
            <input type="hidden" id="removeExpirationDate" name="expiration_date">
            <input type="hidden" id="removeQuantity" name="quantity">
            <button type="submit" class="btn btn-orange">Remove Ingredient</button>
        </form>
        <button class="btn btn-secondary mt-3" onclick="window.location.href='/admin-tools/inventory-management'">Go Back</button>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('removeIngredientForm').addEventListener('submit', function(event) {
            // Copy the values from the add form to the remove form
            document.getElementById('removeName').value = document.getElementById('Name').value;
            document.getElementById('removeExpirationDate').value = document.getElementById('expiration_date').value;
            document.getElementById('removeQuantity').value = document.getElementById('quantity').value;
        });
    </script>
</body>
</html>
