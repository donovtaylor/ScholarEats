{{!-- Description: Frontend handler and gui for university-wide announcements --}}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Make a University-Wide Announcement</title>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
	<div class="container mt-5">
		<h1>Make a University-Wide Announcement</h1>
		{{#if success_msg}}
		<div class="alert alert-success">{{success_msg}}</div>
		{{/if}}
		{{#if error_msg}}
		<div class="alert alert-danger">{{error_msg}}</div>
		{{/if}}
		<form action="/admin-tools/announcement/announce" method="POST">
			<div class="form-group">
				<label for="Name">Announcement</label>
				<input type="text" class="form-control" id="message" name="message" required>
			</div>

			<button type="submit" class="btn btn-primary">Make An Announcement to {{university}}</button>
		</form>
		<button class="btn btn-secondary mt-3" onclick="window.location.href='/admin-tools/inventory-management'">Go
			Back</button>
	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>