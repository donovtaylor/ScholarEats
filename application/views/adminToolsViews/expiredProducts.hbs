<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expired Products</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Expired Products</h1>
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}
        <button class="btn btn-secondary" onclick="window.location.href='/admin-tools/inventory-management'">Go Back</button>
        <table class="table">
            <thead>
                <tr>
                    <th>Ingredient ID</th>
                    <th>Name</th>
                    <th>Expiration Date</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each expiredProducts}}
                <tr>
                    <td>{{this.ingredient_id}}</td>
                    <td>{{this.name}}</td> <!-- Ensure this matches the column name in your database -->
                    <td>{{this.expiration_date}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <form action="/admin-tools/inventory-management/expired-products/delete" method="POST">
                            <input type="hidden" name="ingredient_id" value="{{this.ingredient_id}}">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
