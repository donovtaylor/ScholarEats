<div id="leftSpacer"></div>
{{>header}}
<div class="container">
 <div id="alert-message"></div>
  <div id="message"></div>
  <h3>Color Scheme Preference</h3>
  <form action="/submit" id="themeSelector" method="post">
    <select name="modeSelect" id="modeSelect">
      <option value="lightmode">Light Mode</option>
      <option value="darkmode">Dark Mode</option>
    </select>
    <button type="submit" name="modeBtn" id="modeBtn">Submit</button>
  </form>
  <h3>Change Username</h3>
  <form class="account-form" id="change-username-form" action="/submit" method="post">
    <input type="text" name="username" id="new-username" placeholder="Username">
    <button type="submit">Submit</button>
  </form>
  <h3>Change Password</h3>
  <form class="account-form" id="change-password-form" action="/submit" method="post">
    <input type="password" name="current-password" id="current-password" placeholder="Current Password">
    <input type="password" name="new-password" id="new-password" placeholder="New Password">
    <input type="password" name="verify-password" id="verify-password" placeholder="Verify Password">
    <button type="submit">Submit</button>
  </form>
  <h3>Bio</h3>
  <form class="account-form" id="update-bio-form" action="/submit" method="post">
    <textarea name="bio" id="bio" placeholder="Tell us about yourself..." rows="4" required></textarea>
    <button type="button" class="unfinished_button">Submit</button>
  </form>
  <h3>Pronouns</h3>
  <form class="account-form" id="update-pronouns-form" action="/submit" method="post">
    <input type="text" name="pronouns" id="pronouns" placeholder="Your Pronouns" required>
    <button type="button">Submit</button>
  </form>
  <h3>Change Dietary Restrictions</h3>
  <form class="account-form" id="change-dietary-restrictions" action="/submit" method="post">
    {{>dropdown dropdown2}}
    <button type="submit">Submit</button>
  </form>
  <h3>Change Allergies</h3>
  <form class="account-form" id="change-allergies-from" action="/submit" method="post">
    {{>dropdown dropdown3}}
    <button type="submit">Submit</button>
  </form>


</div>
{{>footer}}
<div id="rightSpacer"></div>
<script src="/js/accountMangement.js"></script>